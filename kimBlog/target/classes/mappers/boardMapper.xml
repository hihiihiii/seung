<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="boardMapper">
  	<insert id="insert">
  		INSERT INTO sh_board(BNO
  							,TITLE
  							,CONTENT
  							,WRITER)
  							
  							VALUES(SH_BOARD_SEQ.NEXTVAL
  							,#{title}
  							,#{content}
  							,#{writer}
  							)
  		
  	</insert>
  	
  	<!-- resultType은 여기에다 담겠다는 의미. -->
  	<select id="list" resultType="kim.kim.vo.BoardVO">
  			SELECT BNO
	  			,TITLE
	  			,WRITER
	  			,REGDATE 
  			FROM SH_BOARD ORDER BY BNO DESC
  	</select>
  	
  	<select id="read" parameterType="int" resultType="kim.kim.vo.BoardVO">
  			select bno
  			, title
  			, content
  			, writer
  			, regdate
  			from sh_board
  			where bno = #{bno}
  	</select>
  	
  	<update id="update" parameterType="kim.kim.vo.BoardVO">
  		UPDATE SH_BOARD
  		SET TITLE = #{title},
  			CONTENT = #{content}
  		WHERE BNO = #{bno}
  	</update>
  	
  	<delete id="delete" parameterType="int">
  		DELETE
  		FROM SH_BOARD
  		WHERE BNO = #{bno}
  	</delete>
  	
  </mapper>